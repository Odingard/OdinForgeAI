{
  "name": "odinforge-installer",
  "version": "1.0.0",
  "description": "Cross-platform CLI installer for OdinForge Agent",
  "main": "index.js",
  "bin": {
    "odinforge-installer": "./index.js"
  },
  "scripts": {
    "build": "pkg . --out-path dist --compress GZip",
    "build:linux": "pkg . -t node18-linux-x64,node18-linux-arm64 --out-path dist --compress GZip",
    "build:macos": "pkg . -t node18-macos-x64,node18-macos-arm64 --out-path dist --compress GZip",
    "build:windows": "pkg . -t node18-win-x64 --out-path dist --compress GZip",
    "build:all": "pkg . -t node18-linux-x64,node18-linux-arm64,node18-macos-x64,node18-macos-arm64,node18-win-x64 --out-path dist --compress GZip"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": ["odinforge", "security", "agent", "installer"],
  "license": "MIT",
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
