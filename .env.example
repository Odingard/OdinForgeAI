# ====================================
# OdinForge-AI Environment Configuration
# ====================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ====================================
# Application
# ====================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ====================================
# Database (PostgreSQL)
# ====================================
DATABASE_URL=postgresql://username:password@localhost:5432/odinforge
DATABASE_SSL=false  # Set to true in production

# ====================================
# Redis (Job Queue & Cache)
# ====================================
REDIS_URL=redis://localhost:6379
REDIS_TLS=false  # Set to true in production

# ====================================
# Security
# ====================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=your-secret-key-here-change-this-in-production

# Cookie settings
COOKIE_SECURE=false  # Set to true in production (requires HTTPS)
COOKIE_SAME_SITE=lax  # Use 'strict' in production

# ====================================
# CORS
# ====================================
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# ====================================
# WebSocket
# ====================================
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# ====================================
# AI/LLM Services (Optional)
# ====================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet

# ====================================
# Cloud Provider Credentials (Optional)
# ====================================

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_SESSION_TOKEN=  # Optional: for temporary credentials

# Azure
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/service-account.json
# OR set credentials directly:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ====================================
# Git Integration (Optional - PR Automation)
# ====================================
# Note: Users will configure their own tokens via UI
# These are fallback/default settings for system-level operations
DEFAULT_GIT_PROVIDER=github  # or gitlab
DEFAULT_GIT_TOKEN=  # Optional: system-level git operations
DEFAULT_GIT_BASE_URL=  # Optional: for GitHub Enterprise / self-hosted GitLab

# ====================================
# Email (Optional - for notifications)
# ====================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false  # true for 465, false for other ports
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=OdinForge AI <noreply@odinforge.ai>

# ====================================
# Monitoring & Logging (Optional)
# ====================================
# DataDog
DD_API_KEY=your-datadog-api-key
DD_SERVICE=odinforge-ai
DD_ENV=development

# New Relic
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=OdinForge AI

# Sentry
SENTRY_DSN=your-sentry-dsn

# ====================================
# Feature Flags (Optional)
# ====================================
ENABLE_SCHEDULED_SCANS=true
ENABLE_HITL_APPROVALS=true
ENABLE_PR_AUTOMATION=true
ENABLE_WEBSOCKET=true

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# File Upload (Optional)
# ====================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/tmp/odinforge-uploads

# ====================================
# Logging
# ====================================
LOG_LEVEL=info  # error, warn, info, debug, verbose
LOG_FORMAT=json  # json or simple

# ====================================
# Development Tools
# ====================================
# Set to true to enable development features
DEBUG=false
ENABLE_SWAGGER_UI=false  # API documentation at /api-docs
ENABLE_GRAPHQL_PLAYGROUND=false
