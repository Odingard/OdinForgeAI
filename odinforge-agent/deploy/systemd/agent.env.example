# OdinForge Agent Environment Configuration
# Copy this file to /etc/odinforge/agent.env

# Required: Your OdinForge server URL
ODINFORGE_SERVER_URL=https://your-odinforge-server.com

# Required: API key from OdinForge Agents page
ODINFORGE_API_KEY=your-api-key-here

# Optional: Tenant/Organization ID
ODINFORGE_TENANT_ID=default

# Authentication mode: api_key or mtls
ODINFORGE_AUTH_MODE=api_key

# Collection intervals
ODINFORGE_TELEMETRY_INTERVAL=5m
ODINFORGE_HEARTBEAT_INTERVAL=1m

# Security settings
ODINFORGE_REQUIRE_HTTPS=true
ODINFORGE_VERIFY_TLS=true
