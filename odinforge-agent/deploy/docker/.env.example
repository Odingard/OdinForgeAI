# OdinForge Agent Docker Configuration
# Copy this file to .env and fill in your values

# Required: Your OdinForge server URL
ODINFORGE_SERVER_URL=https://your-odinforge-server.com

# Required: API key from OdinForge Agents page
ODINFORGE_API_KEY=your-api-key-here

# Optional: Tenant/Organization ID
ODINFORGE_TENANT_ID=default

# Authentication mode: api_key or mtls
ODINFORGE_AUTH_MODE=api_key

# Collection intervals
ODINFORGE_TELEMETRY_INTERVAL=5m
ODINFORGE_HEARTBEAT_INTERVAL=1m

# Transport settings
ODINFORGE_BATCH_SIZE=50
ODINFORGE_COMPRESS=true
ODINFORGE_TIMEOUT=15s

# Security settings
ODINFORGE_REQUIRE_HTTPS=true
ODINFORGE_VERIFY_TLS=true

# Optional: SPKI pin for certificate pinning (base64 encoded)
# ODINFORGE_PINNED_SPKI=

# For mTLS authentication:
# ODINFORGE_MTLS_CERT=/etc/odinforge/certs/agent.crt
# ODINFORGE_MTLS_KEY=/etc/odinforge/certs/agent.key
# ODINFORGE_CA_CERT=/etc/odinforge/certs/ca.crt
