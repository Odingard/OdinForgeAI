# OdinForge Agent Configuration
# Copy this file to /etc/odinforge/agent.yaml and customize

server:
  # Your OdinForge server URL (required)
  url: "https://your-odinforge-server.com"
  
  # Verify TLS certificates (recommended: true for production)
  verify_tls: true
  
  # Optional: SPKI pin for certificate pinning (base64 encoded)
  # pinned_spki: "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA="

auth:
  # Tenant/Organization ID
  tenant_id: "default"
  
  # Authentication mode: "api_key" or "mtls"
  mode: "api_key"
  
  # API key from OdinForge Agents page (for api_key mode)
  api_key: "your-api-key-here"
  
  # mTLS certificate paths (for mtls mode)
  # cert_path: "/etc/odinforge/certs/agent.crt"
  # key_path: "/etc/odinforge/certs/agent.key"
  # ca_path: "/etc/odinforge/certs/ca.crt"

collection:
  # How often to collect and send telemetry data
  telemetry_interval: 5m
  
  # How often to send heartbeat signals
  heartbeat_interval: 1m

buffer:
  # Path to the offline queue database
  path: "/var/lib/odinforge-agent/agent.queue.db"
  
  # Maximum events to buffer when offline
  max_events: 50000

transport:
  # HTTP request timeout
  timeout: 15s
  
  # Number of events to send per batch
  batch_size: 50
  
  # Enable gzip compression for requests
  compress: true

safety:
  # Require HTTPS connections (recommended: true)
  require_https: true
